{% block content %}
    {% for game in games %}
        <img id="bg" src="{{game.img_url}}">
    {% endfor %}
{% endblock %}

{% block img %}
        {% for gamesearch in gamesearchs %} 
            <img id="chooseImg"src="{{gamesearch.img_url}}">
            <section id="title">
                <form action='infos' id='formChoose' method='get'>
                    <input type="submit" id="search" class='searchChoose' name='nom' value ="{{gamesearch.names}}">
                </form>
            </section>   
        {% endfor %}
{% endblock %}


{% block logo %}
            <a href = 'search' id='titlegg' ><img id="titleggSvg" src="public/assets/images/gamersgate.svg"></a>
{% endblock %}

{% block back %}
