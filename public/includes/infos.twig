{% extends 'layoutinfos.twig' %}
{% block head %}
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>GAMER GATE</title>
        <link rel="shortcut icon" type="" href="public/assets/images/logo.svg">
        <link rel="stylesheet" href="public/assets/css/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />    
{% endblock %}

{% block content %}
    {% for game in games %}
        <img class="bg" src="{{game.img_url}}">
    {% endfor %}
{% endblock %}

{% block img %}
        {% for gamesearch in gamesearchs %} 
            <section id="title">
            <img id="infosimg"src="{{gamesearch.img_url}}">
            <p class="infostitle infostitlename"> {{gamesearch.names}}  </p>
            <p class="infos"> {{gamesearch.dates}} </p>
            </section>
            <section id="categories" class="allinfo">
            <p class="infostitle">CATEGORY</p>
            <p class="infos"> {{gamesearch.categories}}</p>
            </section>
            <section id="developer" class="allinfo">
            <p class="infostitle">DEVELOPER</p>
            <p class="infos"> {{gamesearch.developer }}</p>
            </section>
            <section id="userreviews" class="allinfo">
            <p class="infostitle">USER REVIEWS</p>
            <p class="infos"> {{gamesearch.user_reviews}}</p>
            </section>
            <section id="globalreviews" class="allinfo">
            <p class="infostitle">ALL REVIEWS</p>
            <p class="infos"> {{gamesearch.all_reviews }}</p>
            </section>
            <section id="steam" class="allinfo">
            <p class="infostitleSteam">STEAM PAGE :</p>
            <a target="_blank" href="{{gamesearch.link}}"><img id='steamlogo' src="public/assets/images/steam_logo.svg"></a>
            </section>   
        {% endfor %}
{% endblock %}


{% block logo %}
