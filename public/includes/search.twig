{% extends 'layoutsearch.twig' %}
{% block head %}
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>GAMER GATE</title>
        <link rel="shortcut icon" type="" href="public/assets/images/logo.svg">
        <link rel="stylesheet" href="public/assets/css/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />    
{% endblock %}

{% block content %}
    {% for game in games %}
        <img id="bg" src="{{game.img_url}}">
    {% endfor %}
{% endblock %}


{% block input %}
    <form id="searchzone" name="myform" action='choose' method='get' >
    <input type="text" id="search" name='names' placeholder="Search" value="" autocomplete="off">
    <div class="searchProp">
    </div>
    <button type="submit" id="searchButton" >
        <i class="fa fa-search"></i>
     </button>

    </form>
    
     <a href ='search' id='btnRandom'><button id="searchButtonRdm"><i class="fas fa-redo-alt"></i></button></a>
    
{% endblock %}

{% block contentsearch %}
    {% for gamesearch in gamesearchs %}
    <section>
        <div class='searchimgdiv'>
        <img class='searchimg' src="{{gamesearch.img_url}}">
        </div>
        <p class ='searchp'>{{gamesearch.names | truncate(35,true,"...")}}</p>
        <form class='searchForm' action='infos' method='get'> 
            <input type="submit" class="searchSearch" name='id' value ="{{gamesearch.id}}">
            <p class='searchSearchHover'> More Infos <i class="fas fa-chevron-circle-right"></i></p>
        </form>
    </section>
    {% endfor %}
{% endblock %}

{% block logo %}
